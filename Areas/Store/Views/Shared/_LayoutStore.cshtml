@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "GoShop";
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>@title - 前台｜GoShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
        <div class="container">
            <a class="navbar-brand" asp-area="Store" asp-controller="Home" asp-action="Index">GoShop</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#storeNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="storeNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Store" asp-controller="Home" asp-action="Index">首頁</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Store" asp-controller="Catalog" asp-action="Index">瀏覽商品</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Store" asp-controller="Search" asp-action="Index">搜尋/篩選</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Store" asp-controller="Account" asp-action="Profile">會員中心</a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-sm btn-primary" asp-area="Store" asp-controller="Cart" asp-action="Index">購物車 / 結帳</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main class="container py-4">
        <partial name="_Alerts" />
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container text-muted small">© @DateTime.Now.Year GoShop</div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
