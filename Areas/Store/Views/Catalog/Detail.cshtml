@model FinalExamProject.Models.Product
@{
    ViewData["Title"] = "商品詳細";
}

<div class="container py-4">
    <h2 class="mb-4">@Model.ProductName</h2>

    <div class="row">
        <div class="col-md-5">
            <img class="img-fluid rounded shadow-sm"
                 src="@(string.IsNullOrWhiteSpace(Model.Photo) ? Url.Content("~/images/no-image.png") : Model.Photo)"
                 alt="@Model.ProductName" />
        </div>
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-3">商品代碼</dt>
                <dd class="col-sm-9">@Model.ProductCode</dd>

                <dt class="col-sm-3">分類</dt>
                <dd class="col-sm-9">@Model.CategoryInfo?.CategoryName</dd>

                <dt class="col-sm-3">描述</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">價格</dt>
                <dd class="col-sm-9 fw-bold text-danger">@Model.Price.ToString("C")</dd>
            </dl>

            <div class="mt-3 d-flex gap-2">
                <form asp-area="Store" asp-controller="Cart" asp-action="Add" method="post" class="d-flex align-items-center">
                    <input type="hidden" name="id" value="@Model.ProductID" />
                    <input type="number" name="qty" value="1" min="1" class="form-control me-2" style="width:100px;" />
                    <button type="submit" class="btn btn-primary">加入購物車</button>
                </form>
                <a asp-area="Store" asp-controller="Catalog" asp-action="Index" class="btn btn-secondary">返回商品列表</a>
            </div>
        </div>
    </div>
</div>
