@model FinalExamProject.Models.ShoppingCar
@{
    ViewData["Title"] = "購物車";
    decimal total = Model.Items.Sum(i => i.UnitPrice * i.Quantity);
}

<h2 class="mb-3">🛒 我的購物車</h2>

@if (!string.IsNullOrEmpty(TempData["ok"] as string))
{
    <div class="alert alert-success">@TempData["ok"]</div>
}
@if (!string.IsNullOrEmpty(TempData["err"] as string))
{
    <div class="alert alert-danger">@TempData["err"]</div>
}

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info">
        購物車目前是空的。
        <a asp-area="Store" asp-controller="Catalog" asp-action="Index" class="alert-link">去逛逛</a>
    </div>
}
else
{
    <form asp-area="Store" asp-controller="Cart" asp-action="Update" method="post">
        @Html.AntiForgeryToken()
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>商品</th>
                    <th class="text-end">單價</th>
                    <th style="width:120px;" class="text-center">數量</th>
                    <th class="text-end">小計</th>
                    <th style="width:110px;"></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Items.Count; i++)
                {
                    var it = Model.Items[i];
                    <tr>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <img src="@(string.IsNullOrWhiteSpace(it.Photo) ? Url.Content("~/images/no-image.png") : it.Photo)"
                                     alt="@it.ProductName" style="width:64px;height:64px;object-fit:cover;" />
                                <div>
                                    <div class="fw-semibold">@it.ProductName</div>
                                    <div class="text-muted small">@it.ProductID</div>
                                </div>
                            </div>
                        </td>
                        <td class="text-end">@it.UnitPrice.ToString("C")</td>
                        <td class="text-center">
                            <input type="hidden" name="ids" value="@it.ProductID" />
                            <input name="quantities" type="number" min="1" max="999" value="@it.Quantity" class="form-control text-center" />
                        </td>
                        <td class="text-end">@((it.UnitPrice * it.Quantity).ToString("C"))</td>
                        <td class="text-end">
                            <form asp-area="Store" asp-controller="Cart" asp-action="Remove" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@it.ProductID" />
                                <button type="submit" class="btn btn-sm btn-danger">移除</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-outline-primary">更新數量</button>

                <form asp-area="Store" asp-controller="Cart" asp-action="Clear" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">清空購物車</button>
                </form>
            </div>

            <div class="text-end">
                <div class="fs-5">總金額：<strong>@total.ToString("C")</strong></div>
                <div class="mt-2 d-flex justify-content-end gap-2">
                    <a asp-area="Store" asp-controller="Catalog" asp-action="Index" class="btn btn-secondary">繼續購物</a>
                    <a asp-area="Store" asp-controller="Checkout" asp-action="Index" class="btn btn-success">前往結帳</a>
                </div>
            </div>
        </div>
    </form>
}
