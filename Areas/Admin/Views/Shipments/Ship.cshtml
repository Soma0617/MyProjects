@model FinalExamProject.Areas.Admin.Controllers.ShipOrderVm
@{
    ViewData["Title"] = "出貨";
}

<h2 class="mb-3">訂單出貨</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">訂單編號</dt>
            <dd class="col-sm-10">@Model.OrderNumber</dd>

            <dt class="col-sm-2">收件人</dt>
            <dd class="col-sm-10">@Model.RecipientName</dd>

            <dt class="col-sm-2">電話</dt>
            <dd class="col-sm-10">@Model.RecipientPhone</dd>

            <dt class="col-sm-2">地址</dt>
            <dd class="col-sm-10">@Model.RecipientAddress</dd>
        </dl>
    </div>
</div>

<form asp-action="Ship" method="post">
    <input type="hidden" asp-for="OrderID" />
    <input type="hidden" asp-for="OrderNumber" />

    <div class="mb-3">
        <label asp-for="Carrier" class="form-label">貨運商</label>
        <input asp-for="Carrier" class="form-control" />
        <span asp-validation-for="Carrier" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TrackingNumber" class="form-label">追蹤編號</label>
        <input asp-for="TrackingNumber" class="form-control" />
        <span asp-validation-for="TrackingNumber" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">確認出貨</button>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
