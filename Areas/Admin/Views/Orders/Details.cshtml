@model FinalExamProject.Areas.Admin.Controllers.OrdersController.OrderDetailsPageVm
@{
    ViewData["Title"] = "訂單詳細";
}

<h2 class="mb-3">訂單詳細</h2>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">訂單編號</dt>
            <dd class="col-sm-9">@Model.Order.OrderNumber</dd>

            <dt class="col-sm-3">建立時間</dt>
            <dd class="col-sm-9">@Model.Order.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>

            <dt class="col-sm-3">會員</dt>
            <dd class="col-sm-9">@Model.Order.MemberInfo?.Name</dd>

            <dt class="col-sm-3">收件資訊</dt>
            <dd class="col-sm-9">
                @Model.Order.RecipientName（@Model.Order.RecipientPhone）<br />
                @Model.Order.RecipientAddress
            </dd>

            <dt class="col-sm-3">狀態</dt>
            <dd class="col-sm-9">
                付款：@Model.Order.PaymentStatus　/　出貨：@Model.Order.ShippingStatus　/　訂單：@Model.Order.OrderStatus
            </dd>
        </dl>
    </div>
</div>

<h5>商品明細</h5>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>商品</th>
            <th class="text-end">單價</th>
            <th class="text-end">數量</th>
            <th class="text-end">小計</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.Details)
        {
            <tr>
                <td>@d.ProductName</td>
                <td class="text-end">@d.UnitPrice.ToString("C")</td>
                <td class="text-end">@d.Quantity</td>
                <td class="text-end">@d.Subtotal.ToString("C")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-end">總計</th>
            <th class="text-end">@Model.TotalAmount.ToString("C")</th>
        </tr>
    </tfoot>
</table>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Order.OrderID" class="btn btn-warning">編輯</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
