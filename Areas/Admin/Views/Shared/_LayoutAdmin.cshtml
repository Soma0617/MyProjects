@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "後台";
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <title>@title - 後台 | GoShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">GoShop 後台</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="adminNav" class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Products" asp-action="Index">商品管理</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Orders" asp-action="Index">訂單管理</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Members" asp-action="Index">會員管理</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="Admin" asp-controller="Reports" asp-action="Index">報表</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-area="Store" asp-controller="Home" asp-action="Index">回前台</a></li>
                </ul>
            </div>
        </div>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="border-top py-3">
        <div class="container text-muted small">© @DateTime.Now.Year GoShop</div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
