@model FinalExamProject.Models.ProductEditVm
@{
    ViewData["Title"] = "編輯商品";
}

<h4 class="mb-3">編輯商品</h4>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductID" />

    <div class="row g-3">
        <div class="col-md-4">
            <div class="mb-2">
                <label class="form-label d-block">目前圖片</label>
                @if (!string.IsNullOrWhiteSpace(Model.Photo))
                {
                    <img src="@Model.Photo" class="img-thumbnail mb-2" style="width:100%;max-width:260px;object-fit:cover;">
                }
                else
                {
                    <div class="text-muted">無</div>
                }
            </div>
            <div class="mb-3">
                <label class="form-label">更換圖片</label>
                <input type="file" name="NewPhotoFile" class="form-control" accept="image/*" />
            </div>
        </div>

        <div class="col-md-8">
            <div class="mb-3">
                <label asp-for="ProductCode" class="form-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="row g-3">
                <div class="col-md-4">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="CategoryID" class="form-label"></label>
                    <select asp-for="CategoryID" class="form-select" asp-items="ViewBag.Categories">
                        <option value="">請選擇分類</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">儲存變更</button>
        <a asp-action="Index" class="btn btn-secondary">返回</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
}
