@model FinalExamProject.Models.Category
@{
    ViewData["Title"] = "分類詳細";
}

<h2 class="mb-3">分類詳細</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">分類編號</dt>
            <dd class="col-sm-9">@Model.CategoryID</dd>

            <dt class="col-sm-3">分類名稱</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">分類代碼</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.CategoryCode</span>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.CategoryID" class="btn btn-warning">✏ 編輯</a>
    <a asp-action="Delete" asp-route-id="@Model.CategoryID" class="btn btn-danger">🗑 刪除</a>
    <a asp-action="Index" class="btn btn-secondary">↩ 返回列表</a>
</div>
