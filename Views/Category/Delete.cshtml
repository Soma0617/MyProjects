@model FinalExamProject.Models.Category
@{
    ViewData["Title"] = "刪除分類";
}

<h2 class="text-danger">刪除分類</h2>
<p class="text-warning">⚠️ 此操作無法復原，確定要刪除此分類嗎？</p>

<div class="card border-danger mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">分類編號</dt>
            <dd class="col-sm-9">@Model.CategoryID</dd>

            <dt class="col-sm-3">分類名稱</dt>
            <dd class="col-sm-9">@Model.CategoryName</dd>

            <dt class="col-sm-3">分類代碼</dt>
            <dd class="col-sm-9">
                <span class="badge bg-primary">@Model.CategoryCode</span>
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="CategoryID" />
    <button type="submit" class="btn btn-danger me-2">🗑 確定刪除</button>
    <a asp-action="Index" class="btn btn-secondary">↩ 取消</a>
</form>
