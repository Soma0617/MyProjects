@model FinalExamProject.Models.CategoryCreateVm
@{
    ViewData["Title"] = "新增分類";
}

<h2>新增分類</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="CategoryName" class="form-label"></label>
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryCode" class="form-label"></label>
        <input asp-for="CategoryCode" class="form-control" maxlength="1" />
        <span asp-validation-for="CategoryCode" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">新增</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
