@model FinalExamProject.Models.Account
@{
    ViewData["Title"] = "刪除帳號";
}

<div class="container py-4">
    <h2 class="mb-3 text-danger">刪除確認</h2>
    <p class="text-muted">你確定要刪除此帳號嗎？此操作無法復原。</p>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">帳號</dt>
                <dd class="col-sm-9 fw-semibold">@Model.AccountID</dd>

                <dt class="col-sm-3">對應會員</dt>
                <dd class="col-sm-9">
                    @if (Model.MemberInfo is not null)
                    {
                        <div class="d-flex flex-column">
                            <span>@Model.MemberInfo.Name</span>
                            <small class="text-muted">@Model.MemberInfo.Email</small>
                        </div>
                    }
                    else
                    {
                        <span class="badge bg-secondary">未連結會員</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.AccountID" />
        <button type="submit" class="btn btn-danger">刪除</button>
        <a asp-action="Index" class="btn btn-secondary">取消</a>
    </form>
</div>
