@model FinalExamProject.Models.Account
@{
    ViewData["Title"] = "帳號詳細";
}

<div class="container py-4">
    <h2 class="mb-3">帳號詳細</h2>

    <div class="card">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">帳號</dt>
                <dd class="col-sm-9 fw-semibold">@Model.AccountID</dd>

                <dt class="col-sm-3">對應會員</dt>
                <dd class="col-sm-9">
                    @if (Model.MemberInfo is not null)
                    {
                        <div class="d-flex flex-column">
                            <span>@Model.MemberInfo.Name</span>
                            <small class="text-muted">@Model.MemberInfo.Email</small>
                        </div>
                    }
                    else
                    {
                        <span class="badge bg-secondary">未連結會員</span>
                    }
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.AccountID" class="btn btn-primary">編輯</a>
            <a asp-action="Index" class="btn btn-secondary">返回列表</a>
        </div>
    </div>
</div>
