@model FinalExamProject.Models.OrderDetailCreateVm
@{
    ViewData["Title"] = "新增訂單明細";
    var orders = ViewBag.Orders as List<FinalExamProject.Models.Order>;
    var products = ViewBag.Products as List<FinalExamProject.Models.Product>;
}

<h2>新增訂單明細</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OrderID" class="form-label">訂單</label>
        <select asp-for="OrderID" class="form-select">
            <option value="">請選擇訂單</option>
            @foreach (var o in orders!)
            {
                <option value="@o.OrderID">@o.OrderNumber</option>
            }
        </select>
        <span asp-validation-for="OrderID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductID" class="form-label">商品</label>
        <select asp-for="ProductID" class="form-select">
            <option value="">請選擇商品</option>
            @foreach (var p in products!)
            {
                <option value="@p.ProductID">@p.ProductName</option>
            }
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">新增</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
