@model FinalExamProject.Models.Member
@{
    ViewData["Title"] = "會員詳細";
}

<h2 class="mb-3">會員詳細</h2>

<dl class="row">
    <dt class="col-sm-3">姓名</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">電子郵件</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">電話</dt>
    <dd class="col-sm-9">@Model.Phone</dd>

    <dt class="col-sm-3">地址</dt>
    <dd class="col-sm-9">@Model.Address</dd>

    <dt class="col-sm-3">性別</dt>
    <dd class="col-sm-9">@Model.Sex</dd>

    <dt class="col-sm-3">生日</dt>
    <dd class="col-sm-9">@Model.Birthday.ToString("yyyy/MM/dd")</dd>

    <dt class="col-sm-3">Email 已驗證</dt>
    <dd class="col-sm-9">@(Model.IsEmailConfirmed ? "是" : "否")</dd>

    <dt class="col-sm-3">註冊時間</dt>
    <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm:ss")</dd>

    <dt class="col-sm-3">最後登入</dt>
    <dd class="col-sm-9">@Model.LastLoginDate?.ToString("yyyy/MM/dd HH:mm:ss")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MemberID" class="btn btn-primary">編輯</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
