@model FinalExamProject.Models.Member
@{
    ViewData["Title"] = "刪除會員";
}

<h2 class="mb-3 text-danger">刪除確認</h2>
<p>你確定要刪除這筆會員資料嗎？</p>

<div class="mb-3">
    <dl class="row">
        <dt class="col-sm-3">姓名</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">電子郵件</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">電話</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">地址</dt>
        <dd class="col-sm-9">@Model.Address</dd>

        <dt class="col-sm-3">Email 已驗證</dt>
        <dd class="col-sm-9">@(Model.IsEmailConfirmed ? "是" : "否")</dd>

        <dt class="col-sm-3">註冊時間</dt>
        <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm:ss")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="MemberID" />
    <button type="submit" class="btn btn-danger">刪除</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>
