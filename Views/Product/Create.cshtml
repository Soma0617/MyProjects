@model FinalExamProject.Models.ProductCreateVm
@{
    ViewData["Title"] = "新增商品";
    var categories = ViewBag.Categories as List<FinalExamProject.Models.Category>;
}

<h2>新增商品</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label"></label>
        <input asp-for="ProductCode" class="form-control" />
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Photo" class="form-label"></label>
        <input asp-for="Photo" class="form-control" placeholder="可輸入圖片檔名或 URL" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label"></label>
        <select asp-for="CategoryID" class="form-select">
            <option value="">請選擇分類</option>
            @foreach (var c in categories!)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">新增</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
