@model FinalExamProject.Models.ProductEditVm
@{
    ViewData["Title"] = "編輯商品";
    var categories = ViewBag.Categories as List<FinalExamProject.Models.Category>;
}

<h2>編輯商品</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductID" />

    <div class="mb-3">
        <label asp-for="ProductCode" class="form-label"></label>
        <input asp-for="ProductCode" class="form-control" />
        <span asp-validation-for="ProductCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">目前圖片</label><br />
        @if (!string.IsNullOrWhiteSpace(Model.Photo))
        {
            <img src="~/Pictures/@Model.Photo" class="img-thumbnail" style="max-width:200px;" />
        }
        else
        {
            <span class="text-muted">尚無圖片</span>
        }
    </div>

    <div class="mb-3">
        <label asp-for="PhotoFile" class="form-label">上傳新圖片（選填）</label>
        <input asp-for="PhotoFile" type="file" class="form-control" />
        <span asp-validation-for="PhotoFile" class="text-danger"></span>
        <div class="form-text">若不選擇檔案，將保留原圖。</div>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label">分類</label>
        <select asp-for="CategoryID" class="form-select">
            <option value="">請選擇分類</option>
            @foreach (var c in categories!)
            {
                <option value="@c.CategoryID" selected="@(Model.CategoryID == c.CategoryID)">
                    @c.CategoryName
                </option>
            }
        </select>
        <span asp-validation-for="CategoryID" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label">是否上架</label>
    </div>

    <button type="submit" class="btn btn-primary">儲存變更</button>
    <a asp-action="Index" class="btn btn-secondary">返回</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
