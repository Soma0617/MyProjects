@model FinalExamProject.Models.Product
@{
    ViewData["Title"] = "刪除商品";
}

<h2 class="text-danger">刪除商品</h2>
<p class="text-warning">⚠️ 這個動作無法復原，確定要刪除嗎？</p>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">商品代碼</dt>
            <dd class="col-sm-9">@Model.ProductCode</dd>

            <dt class="col-sm-3">商品名稱</dt>
            <dd class="col-sm-9">@Model.ProductName</dd>

            <dt class="col-sm-3">描述</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">價格</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">分類</dt>
            <dd class="col-sm-9">@Model.CategoryInfo?.CategoryName</dd>

            <dt class="col-sm-3">狀態</dt>
            <dd class="col-sm-9">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">上架</span>
                }
                else
                {
                    <span class="badge bg-secondary">下架</span>
                }
            </dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProductID" />
    <button type="submit" class="btn btn-danger">刪除</button>
    <a asp-action="Index" class="btn btn-secondary">取消</a>
</form>
