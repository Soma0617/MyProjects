@model FinalExamProject.Models.Product
@{
    ViewData["Title"] = "商品詳細";
}

<h2 class="mb-3">商品詳細</h2>

<div class="card shadow-sm">
    <div class="row g-0">
        <div class="col-md-4 text-center p-3">
            @if (!string.IsNullOrEmpty(Model.Photo))
            {
                <img src="~/Pictures/@Model.Photo"
                     alt="@Model.ProductName"
                     class="img-fluid rounded border"
                     style="max-height:300px;" />
            }
            else
            {
                <div class="text-muted border p-5">未提供圖片</div>
            }
        </div>

        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.ProductName</h4>
                <p class="card-text text-muted">@Model.Description</p>

                <dl class="row mt-3">
                    <dt class="col-sm-3">商品代碼</dt>
                    <dd class="col-sm-9">@Model.ProductCode</dd>

                    <dt class="col-sm-3">分類</dt>
                    <dd class="col-sm-9">@Model.CategoryInfo?.CategoryName</dd>

                    <dt class="col-sm-3">價格</dt>
                    <dd class="col-sm-9 text-danger fw-bold">@Model.Price.ToString("C")</dd>

                    <dt class="col-sm-3">狀態</dt>
                    <dd class="col-sm-9">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">上架</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">下架</span>
                        }
                    </dd>

                    <dt class="col-sm-3">建立時間</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>

                    <dt class="col-sm-3">最後更新</dt>
                    <dd class="col-sm-9">@Model.UpdatedDate.ToString("yyyy/MM/dd HH:mm")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-warning">編輯</a>
    <a asp-action="Delete" asp-route-id="@Model.ProductID" class="btn btn-danger">刪除</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
