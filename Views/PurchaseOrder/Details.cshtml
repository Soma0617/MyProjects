@model FinalExamProject.Models.PurchaseOrder
@{
    ViewData["Title"] = "採購單詳細資料";
}

<h2>採購單詳細資料</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">採購單號</dt>
            <dd class="col-sm-9">@Model.PurchaseOrderCode</dd>

            <dt class="col-sm-3">供應商名稱</dt>
            <dd class="col-sm-9">@Model.SupplierName</dd>

            <dt class="col-sm-3">狀態</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">建立時間</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>

            <dt class="col-sm-3">更新時間</dt>
            <dd class="col-sm-9">@Model.UpdatedDate?.ToString("yyyy/MM/dd HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.PurchaseOrderID" class="btn btn-warning">編輯</a>
    <a asp-action="Delete" asp-route-id="@Model.PurchaseOrderID" class="btn btn-danger">刪除</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
