@model FinalExamProject.Models.Payment
@{
    ViewData["Title"] = "付款紀錄詳細資料";
}

<h2>付款紀錄詳細資料</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">訂單編號</dt>
            <dd class="col-sm-9">@Model.OrderInfo?.OrderNumber</dd>

            <dt class="col-sm-3">付款方式</dt>
            <dd class="col-sm-9">@Model.PaymentMethod</dd>

            <dt class="col-sm-3">付款金額</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("C")</dd>

            <dt class="col-sm-3">付款日期</dt>
            <dd class="col-sm-9">@Model.PaymentDate.ToString("yyyy/MM/dd HH:mm")</dd>

            <dt class="col-sm-3">付款狀態</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">交易編號</dt>
            <dd class="col-sm-9">@Model.TransactionID</dd>

            <dt class="col-sm-3">建立時間</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("yyyy/MM/dd HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.PaymentID" class="btn btn-warning">編輯</a>
    <a asp-action="Delete" asp-route-id="@Model.PaymentID" class="btn btn-danger">刪除</a>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</div>
